<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
    
  
<% else %>
<div class="row-fluid">
  <div class="span4">
    <h3>Place holder</h3>
</div>
<div class="span4">
  <h3>Blog Posts</h3>
  <% @micropost.each do |post| %>
  <ul>
    <li><%= post.content %></li>
  </ul>
  <% end %>
</div>
<div class="span4">
  <h3>Right Panel</h3>
</div>

<%#=
  <div class="center hero-unit">
    <h1>Welcome to DansBuzz</h1>

    <h2>
      DansBuzz / Beta
      <a href="#">Blog-Promote-Share</a>
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
                              

  </div>

  <%= link_to image_tag("logo.png", alt: "DansBuzz"), 'root_path' %>
<% end %>